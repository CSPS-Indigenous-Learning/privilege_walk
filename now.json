{
  "version": 2,
  "env": {
    "ON_VERCEL": "true"
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      config: {
        includeFiles: ["/tmp/(.*)"]
      }
    },
    {
      "src": "en/api/**/*.js",
      "use": "@vercel/node",
      config: {
        includeFiles: ["/tmp/(.*)"]
      }
    },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/now-builder",
      config: {
        includeFiles: ["/tmp/(.*)"]
      }
    }
  ],
  "routes": [
    { "src": "/en/api/write", "dest": "api/write.js" },
    { "src": "/en/api/write/(.*)", "dest": "api/write.js" },
    { "src": "/en/api/write(.*)", "dest": "api/write.js" }
  ]
}
