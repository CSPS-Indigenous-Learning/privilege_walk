{
    "version": 2,
    "env": {
        "ON_VERCEL": "true"
    },
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "nuxt.config.js",
            "use": "@nuxtjs/now-builder"
        }
    ],
    "routes": [
        { "src": "/en/api/write", "dest": "api/write.js" },
        { "src": "/en/api/write/(.*)", "dest": "api/write.js" },
        { "src": "/en/api/write(.*)", "dest": "api/write.js" },
        { "src": "/en/api/(.*)", "dest": "api/index.js" },
        { "src": "/en/api", "dest": "api/index.js" },
        { "src": "/(.*)", "dest": "$1" }
    ]
}
